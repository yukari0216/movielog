=bootstrap_form_with model: [:login, @directer], local: true do |f|
  =f.text_field :name
  =f.text_field :country
  =f.file_field :image
  =f.hidden_field :image_cache
  -if @directer.image.present?
    .m-t-5
      =image_tag @directer.image_url(:thumb)
      .checkbox.checkbox-primary.m-t-5
        =f.check_box_without_bootstrap :remove_image
        =f.label :remove_image, 'Image Delete'
  =f.submit