=bootstrap_form_with model: [:login, @work], local: true do |f|
  =f.text_field :title
  =f.collection_select :directer_id, Directer.all, :id, :name, include_blank: true, class: 'form-control'
  =f.text_field :year
  =f.text_field :acter
  =f.text_field :about
  =f.file_field :image
  =f.hidden_field :image_cache
  -if @work.image.present?
    .m-t-5
      =image_tag @work.image_url(:thumb)
      .checkbox.checkbox-primary.m-t-5
        =f.check_box_without_bootstrap :remove_image
        =f.label :remove_image, 'Image Delete'
  =f.submit