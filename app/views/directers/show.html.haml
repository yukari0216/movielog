%main#main
  %section.section
    .container
      .row.mb-4.align-items-center
        .col-md-6{"data-aos" => "fade-up"}
          %h2=@directer.name
          %p 
            Born:
            =@directer.country
          -if user_signed_in? 
            =link_to 'Edit', edit_login_directer_path, class: 'btn btn-outline-danger'
            =link_to 'Delete', login_directer_path(@directer), method: :delete, data: {confirm: "Are you sure?"}, class: 'btn btn-outline-warning'
      .site-section.pb-0
      .container
        .row.align-items-stretch
          .col-md-8{"data-aos" => "fade-up"}
            -# %img.img-fluid{:alt => "Image", :src => "/img/img_1_big.jpg"}/
            -# =image_tag @work.image.variant(resize:"730x730^").processed, class: 'img-fluid'
            -if @directer.image.present?
              =image_tag @directer.image_url, class: 'img-fluid'
            -else
              =image_tag '/img/default_image.png', class: 'img-fluid'
          .col-md-3.ml-auto{"data-aos" => "fade-up", "data-aos-delay" => "100"}
            .sticky-content
              -# %h3.h3=@directer.name
              -# %p.mb-4
              -#   %span.text-muted=@directer.country
              -# .mb-5
              -#   -# %p=@directer.about
              -if @directer.works.present?
                .mb-3  
                  ="#{@directer.name} works"
                %ul.list-unstyled.list-line.mb-5
                  -@directer.works.each do |work|
                    =link_to work_path(work) do
                      %li=work.title
              =link_to 'Add New Movie', new_login_work_path(directer_id: @directer.id), class: 'btn btn-outline-danger'        
